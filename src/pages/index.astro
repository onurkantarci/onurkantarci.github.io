---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <section>
    <span id="typing"></span>
    <div class="whole-container">
      <div class="index-main">
        <div class="name-flag">
          <h1>ONUR KANTARCI.</h1>
          <a href="https://en.wikipedia.org/wiki/Kosovo">
            <img
              class="flag"
              src="public/pictures/Flag_of_Kosovo.svg"
              alt="flag"
            />
          </a>
        </div>
        <h2 class="index-title">
          A <span class="full-stack">FULL-STACK DEVELOPER üë®üèª‚Äçüíª</span> AND <span
            class="trainee-law">TRAINEE LAWYER ‚öñÔ∏è</span
          >
        </h2>
        <p>
          I'm Onur Kantarci, a full-stack developer and trainee lawyer with a
          passion for creating dynamic web applications. With two years of
          experience in <a href="/technologies" class="yellow-highlight"
            >most-used technologies,</a
          > I bring a unique blend of legal insight and technical skills to build
          innovative and impactful solutions.
        </p>
      </div>
    </div>
    <div class="resume-container">
      <a
        href="https://www.mediafire.com/file/7qpihwavwlrycez/Onur-Kantarci-Resume.pdf/file"
        download
        class="resume-download">Download Resume</a
      >
    </div>
  </section>
</Layout>

<script>
  const words = ["innovative", "impactful", "dynamic"];
  let i = 0;
  let timer;

  function typingEffect() {
    let word = words[i].split("");
    const typingElement = document.getElementById("typing");

    if (!typingElement) return;

    var loopTyping = function () {
      if (word.length > 0) {
        typingElement.innerHTML += word.shift();
      } else {
        deletingEffect();
        return false;
      }
      timer = setTimeout(loopTyping, 200);
    };
    loopTyping();
  }

  function deletingEffect() {
    let word = words[i].split("");
    const typingElement = document.getElementById("typing");

    if (!typingElement) return;

    var loopDeleting = function () {
      if (word.length > 0) {
        word.pop();
        typingElement.innerHTML = word.join("");
      } else {
        if (words.length > i + 1) {
          i++;
        } else {
          i = 0;
        }
        typingEffect();
        return false;
      }
      timer = setTimeout(loopDeleting, 200);
    };
    loopDeleting();
  }

  typingEffect();
</script>

<style>
  h1,
  p {
    font-family: "Roboto", sans-serif;
    font-weight: 700;
    font-size: 48px;
  }

  .index-title {
    color: #ffffff7e;
    display: flex;
    align-items: center;
    gap: 18px;
  }

  p {
    font-size: 34px;
    color: #ffffff42;
  }
  .whole-container {
    display: flex;
    justify-content: center;
    flex-direction: column;
    margin: 0 auto;
    max-width: 40%;
  }
  .name-flag {
    display: flex;
    align-items: center;
    gap: 20px;
  }
  .flag {
    border-radius: 50%;
    width: 25px;
    height: 25px;
    object-fit: cover;
  }
  .flag:hover {
    cursor: pointer;
    box-shadow: 5px 5px 5px 5px #102a8875;
  }
  #typing {
    color: #fff;
    font-weight: bold;
    position: fixed;
    font-size: 50px;
    left: 0;
    margin-left: 110px;
    top: 60%;
    transform: translateY(-50%) rotate(270deg);
    transform-origin: left center;
  }
  .resume-container {
    position: fixed;
    bottom: 20px;
    right: 40px;
    z-index: 1;
  }
  .resume-download {
    color: white;
    text-decoration: none;
    font-family: "Roboto", sans-serif;
    font-weight: 700;
    display: inline-block;
    padding: 10px 20px;
    background: #1c8151;
    color: #fff;
    text-decoration: none;
    border-radius: 5px;
    transition: background 0.3s;
  }
  .resume-download:hover {
    background: #4de7a6;
  }
  .index-main {
    animation: fadeIn 500ms ease-in-out;
  }
  .full-stack {
    background-color: #1c8151;
    color: #4de7a6;
    font-size: 22px;
    padding: 5px;
    border-radius: 3px;
  }

  .trainee-law {
    background-color: #811c1c;
    color: #e74d4d;
    font-size: 22px;
    padding: 5px;
    border-radius: 3px;
  }

  .yellow-highlight {
    background-color: #fff;
    color: black;
    text-decoration: none;
    transition: background-color 100ms;
    border-radius: 3px;
  }
  .yellow-highlight:hover {
    background-color: grey;
  }
</style>
